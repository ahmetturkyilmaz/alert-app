generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model alerts {
  id                   Int       @id @default(autoincrement())
  target_price         Float     @map("targetPrice")
  user_id              Int       @map("userId")
  symbol               String    @db.VarChar(10)
  is_notification_sent Boolean?  @default(false) @map("isNotificationSent")
  condition            String    @db.VarChar(1)
  created_at           DateTime? @default(now()) @map("createdAt") @db.Timestamp(6)
  updated_at           DateTime? @default(now()) @map("updatedAt") @db.Timestamp(6)
}
